<div class="container">
  <form role="form" action="/savers/<%= @package.id %>" method="post">
    <div class="form-group">
      <label for="package_name">Company or Person Name</label>
      <input type="text" class="form-control" name="package[name]" id="package_name" placeholder="The name of this screen saver" value="<%= @package.name %>">
    </div>
    <div class="form-group">
      <label for="package_quotes">Quotes (in CSV format)</label>
      <textarea class="form-control" name="package[quotes_as_csv]" id="package_quotes_as_csv" placeholder="To Be Or Not To Be, Shakespear, Writer" rows="15"><%= @package.quotes_as_csv %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Generate Screen Saver</button>
  </form>
</div>
